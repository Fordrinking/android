<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_blue_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <include layout="@layout/page_auth_login"/>
            <include layout="@layout/page_auth_signup"/>
            <include layout="@layout/page_explore"/>
        </FrameLayout>





        <fragment
            android:id="@+id/navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:name="com.kaidi.fordrinking.NavigationDrawerFragment"
            tools:layout="@layout/drawer_before"/>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
